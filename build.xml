      </jar>
   </target>

   <target name='bubbles' depends='all'>
      <jar destfile='fait.jar'>
	 <manifest>
	 </manifest>
	 <fileset dir='./java' includes='**/*.class' />
	 <fileset dir='./lib' includes='fait*.xml' />
	 <fileset dir='./lib' includes='*.vel' />
