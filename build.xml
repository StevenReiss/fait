	 <zipfileset src='/pro/ivy/lib/eclipsejar/org.eclipse.core.net.jar' excludes='META-INF/*' />
	 <zipfileset src='/pro/ivy/lib/eclipsejar/org.eclipse.core.resources.jar' excludes='META-INF/*' />
	 <zipfileset src='/pro/ivy/lib/eclipsejar/org.eclipse.core.runtime.jar' excludes='META-INF/*' />
	 <zipfileset src='/pro/ivy/lib/eclipsejar/org.eclipse.debug.core.jar' excludes='META-INF/*' />
	 <zipfileset src='/pro/ivy/lib/eclipsejar/org.eclipse.debug.ui.jar' excludes='META-INF/*' />
	 <zipfileset src='/pro/ivy/lib/eclipsejar/org.eclipse.equinox.app.jar' excludes='META-INF/*' />
